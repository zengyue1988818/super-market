<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane styleClass="pride-theme" prefHeight="992.0" prefWidth="1223.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.TypeController">
    <HBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="10">
        <Button onAction="#addType" styleClass="green-theme" text="添加商品类别" />
    </HBox>
    <TableView fx:id="typeTable" prefWidth="700" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="50">
        <columns>
            <TableColumn text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="类别名称">
                <cellValueFactory>
                    <PropertyValueFactory property="typeName" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</AnchorPane>
