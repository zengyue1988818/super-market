<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.TitledPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft1841.sm.contorller.QMainController">
    <top>
        <AnchorPane prefHeight="80">
            <!--点击这个文字显示默认主页数据-->
        <Label text="超市收银系统" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="10">
      <!--字体特效-->
            <effect>
                <Reflection bottomOpacity="0.2" fraction="0.5" topOffset="-0.5" />
            </effect>
        </Label>
            <ImageView fitWidth="110" fitHeight="110" AnchorPane.topAnchor="15" AnchorPane.leftAnchor="300">
           <Image url="/img/2018.png"/>
            </ImageView>
            <Button text="退出系统" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20"/>
        </AnchorPane>
    </top>
    <center>
        <!--分割面板-->
        <SplitPane>
            <!--左侧的导航菜单部分-->
            <AnchorPane minWidth="200">
                <!--采用风琴面板实现-->
                <Accordion AnchorPane.rightAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.topAnchor="0.0">
                    <panes>
                        <!--有标题面板组成，里面镶嵌Vbox,实现一级目录和二级目录效果-->
                        <TitledPane alignment="TOP_LEFT" text="商品名称">
                            <VBox minHeight="100" spacing="10">
                                <!--点击该按钮，右侧切换商品-->
                                <Button text="商品条码"/>
                                <Button text="商品信息"/>
                            </VBox>
                        </TitledPane>
                    </panes>
                </Accordion>
            </AnchorPane>




        </SplitPane>





    </center>

</BorderPane>